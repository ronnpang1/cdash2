@model Inspinia_MVC5.Models.meeting

@{
    ViewBag.Title = "Addmeetings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Addmeetings</h2>
        <ol class="breadcrumb">
            <li>
                @Html.ActionLink("List", "Index")
            </li>
            <li class="active">
                <strong>Addmeetings</strong>
            </li>
        </ol>
    </div>
    <div class="col-sm-8">
        <div class="title-action">
			@Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary"})
        </div>
    </div>
</div>



<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Addmeetings meeting</h5>
                </div>
                <div class="ibox-content">

				@using (Html.BeginForm("createMeetings", "UIElements"))
                {
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.committee_name,"Committee Name", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.committee_name)
                @Html.ValidationMessageFor(model => model.committee_name)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Message_Agenda,"New Agenda", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Message_Agenda, new { cols = 50, @rows = 3 })
                @Html.ValidationMessageFor(model => model.Message_Agenda)
            </div>
        </div>

        

        <div class="form-group">
            @Html.LabelFor(model => model.end_date,"Meeting date" , new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.end_date)
                @Html.ValidationMessageFor(model => model.end_date)
            </div>
        </div>

        

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary" />
				@Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-white"})
            </div>
        </div>
    </div>
}

                </div>
            </div>
        </div>
    </div>
 </div>

 

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
