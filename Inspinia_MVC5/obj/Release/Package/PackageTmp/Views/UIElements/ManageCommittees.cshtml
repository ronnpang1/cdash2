@model IEnumerable<Inspinia_MVC5.Models.ViewModel.CommitteeListViewmodel>

@{
    ViewBag.Title = "ManageCommittees";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>ManageCommittees</h2>
        <ol class="breadcrumb">
            <li class="active">
                <strong>CommitteeListViewmodel</strong>
            </li>
        </ol>
    </div>
</div>


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>List of CommitteeListViewmodel</h5>
					<div class="ibox-tools">
						@Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary btn-xs"})
					</div>
                </div>
                <div class="ibox-content">

<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CommitteeName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Committee_CreationDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Committee_Numbers)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.faculty)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.active)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CommitteeName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Committee_CreationDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Committee_Numbers)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.faculty)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.active)
        </td>
        <td>
			@Html.ActionLink("Manage", "ComDetails", "UIElements",new { committeeName = item.CommitteeName  }, new { @class = "btn btn-primary btn-sm"})
            @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }, new { @class = "btn btn-white btn-sm"})
            @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ }, new { @class = "btn btn-white btn-sm"})
        </td>
    </tr>
}

</table>

                </div>
            </div>
        </div>
    </div>
 </div>



